<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screenBackground2"
        tools:context=".RandomFragment">

    <TextView
            android:id="@+id/textview_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            android:textColor="@android:color/white"
            android:textSize="72sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_header"
            app:layout_constraintVertical_bias="0.135"
            android:layout_marginTop="224dp" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintBottom_toTopOf="@+id/previous_button"/>
    <TextView
            android:id="@+id/textview_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/random_heading"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="197dp"/>

    <Button

            android:text="@string/previous_button_text"
            android:background="@color/buttonBackground"
            app:backgroundTint="@null"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/previous_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>